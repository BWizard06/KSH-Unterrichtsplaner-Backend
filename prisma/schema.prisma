generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  password String
  teacher  Teacher?
  student  Student?
}

model Teacher {
  id           Int            @id @default(autoincrement())
  userId       Int            @unique
  user         User           @relation(fields: [userId], references: [id])
  classes      Class[]        @relation("TeacherClasses")
  TeacherClass TeacherClass[]
}

model Student {
  id      Int   @id @default(autoincrement())
  userId  Int   @unique
  user    User  @relation(fields: [userId], references: [id])
  class   Class @relation(fields: [classId], references: [id])
  classId Int

  @@index([classId])
}

model Class {
  id           Int            @id @default(autoincrement())
  name         String
  teachers     Teacher[]      @relation("TeacherClasses")
  lessons      Lesson[]
  Student      Student[]
  TeacherClass TeacherClass[]
}

model Lesson {
  id            Int      @id @default(autoincrement())
  classId       Int
  title         String
  start_time    DateTime
  end_time      DateTime
  room          String
  public_notes  String
  private_notes String
  Files         File[]
  Classes       Class    @relation(fields: [classId], references: [id])

  @@index([classId])
}

model TeacherClass {
  teacher   Teacher @relation(fields: [teacherId], references: [id])
  teacherId Int
  class     Class   @relation(fields: [classId], references: [id])
  classId   Int

  @@id([teacherId, classId])
  @@index([teacherId, classId])
}

model File {
  id          Int     @id @default(autoincrement())
  lesson_id   Int
  file_name   String
  file_path   String
  file_type   String
  binary_file Bytes
  visibility  Boolean
  lesson      Lesson  @relation(fields: [lesson_id], references: [id])

  @@index([lesson_id])
}
